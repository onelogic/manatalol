@page "/apex-range-area"
@model Smartadmin.Pages.Apex.RangeAreaModel

@{
    ViewBag.Title = "RangeArea";
}

@section styles
{

}

@await Html.PartialAsync("~/Pages/Shared/Partials/_PageTitle.cshtml", new {
pageTitle = "Apex Range Area Chart",
pageSubTitle1 = "Data Visualization",
pageSubTitle2 = "Apex Charts",
pageSubText = "This range area design—ideal for highlighting trends within defined boundaries — perfect for showcasing data fluctuations in a structured format."
})

