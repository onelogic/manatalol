@section styles
{

}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top w-100 py-3">
    <div class="container">
        <a class="navbar-brand" href="/dashboard-control-center">
            <img alt="logo" src="~/img/logo-light.svg" />
        </a>
        <div class="ms-auto d-flex gap-2">
