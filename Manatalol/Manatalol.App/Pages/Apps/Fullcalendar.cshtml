@page "/apps-fullcalendar"
@model Smartadmin.Pages.Apps.FullcalendarModel

@{
    ViewBag.Title = "Fullcalendar";
}

@section styles
{

}

@await Html.PartialAsync("~/Pages/Shared/Partials/_PageTitle.cshtml", new {
pageTitle = "Full Calendar",
pageSubTitle1 = "Data Visualization",
pageSubTitle2 = (string?)null,
pageSubText = "Interactive event calendar with drag and drop"
})

<div class="main-content">
    <div class="row mb-4">
        <div class="col-lg-8 col-xl-9">
            <div class="card">
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <button class="btn btn-outline-primary btn-sm" id="manageCategoriesBtn">
                            Manage Categories
                        </button>
                        <button class="btn btn-outline-primary btn-sm" id="exportEvents">
                            Export Events
                        </button>
                        <label class="btn btn-outline-primary btn-sm mb-0" for="importEvents">
                            Import Events
                        </label>
                        <input accept=".json" class="d-none" id="importEvents" type="file" />
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Draggable Events</h5>
                </div>
                <div class="card-body">
                    <div id="external-events">
                        <p class="text-muted small">Drag these events to the calendar</p>
                        <div class="external-event p-2 mb-2 rounded bg-primary text-white" data-category="meeting"
                            data-description="Regular check-in with team members" data-location="Meeting Room 1">Team
                            Standup
                        </div>
                        <div class="external-event p-2 mb-2 rounded bg-success text-white"
                            data-description="Time to breathe and recharge" data-location="Break Room">Coffee Break
                        </div>
                        <div class="external-event p-2 mb-2 rounded bg-warning text-dark" data-category="meeting"
                            data-description="One-on-one with supervisor" data-location="Manager's Office">Performance
                            Review</div>
                        <div class="external-event p-2 mb-2 rounded bg-danger text-white" data-category="task"
                            data-description="Time blocked for focusing on deliverables"
                            data-location="Personal Workspace">Focus Time</div>
                        <div class="external-event p-2 mb-2 rounded bg-info text-white"
                            data-description="Lunch with colleagues" data-location="Cafeteria">Lunch
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" id="removeAfterDrop" type="checkbox" />
                            <label class="form-check-label" for="removeAfterDrop">
                                Remove after drop
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Filter by Category</h5>
                    <button class="btn btn-xs btn-link p-0" id="toggleAllFilters">
                        All
                    </button>
                </div>
                <div class="card-body">
                    <div id="category-filters">
                        <!-- Category filters will be populated by JS -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Toast Container -->
    <div class="position-fixed top-0 end-0 p-3" id="toast-container" style="z-index: 1100"></div>
    <!-- Event Modal -->
    <div aria-hidden="true" aria-labelledby="eventModalTitle" class="modal fade" id="eventModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalTitle">Event Details</h5>
                    <button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button"></button>
                </div>
                <form id="eventForm">
                    <div class="modal-body">
                        <input id="eventId" type="hidden" />
                        <div class="mb-3">
                            <label class="form-label" for="eventTitle">Event Title</label>
                            <input class="form-control" id="eventTitle" required="" type="text" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="eventStart">Start</label>
                                <input class="form-control" id="eventStart" required="" type="datetime-local" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="eventEnd">End</label>
                                <input class="form-control" id="eventEnd" type="datetime-local" />
                            </div>
                        </div>
                        <div class="mb-3 form-check">
                            <input class="form-check-input" id="eventAllDay" type="checkbox" />
                            <label class="form-check-label" for="eventAllDay">All Day</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="eventCategory">Category</label>
                            <select class="form-select" id="eventCategory">
                                <!-- Categories will be populated by JS -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="eventColor">Color (Custom)</label>
                            <select class="form-select" id="eventColor">
                                <option value="var(--primary-500)">Primary</option>
                                <option value="var(--success-500)">Success</option>
                                <option value="var(--danger-500)">Danger</option>
                                <option value="var(--warning-500)">Warning</option>
                                <option value="var(--info-500)">Info</option>
                                <option value="var(--dark)">Dark</option>
                                <option value="var(--secondary)">Secondary</option>
                            </select>
                            <small class="form-text text-muted">Custom color will be overridden if a
                                category is selected.</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="eventDescription">Description</label>
                            <textarea class="form-control" id="eventDescription" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="eventLocation">Location</label>
                            <input class="form-control" id="eventLocation" type="text" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger me-auto" id="deleteEvent" style="display: none;"
                            type="button">Delete</button>
                        <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
                        <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Confirmation Modal -->
    <div aria-hidden="true" aria-labelledby="deleteModalLabel" class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark bg-opacity-50 shadow-5 translucent-dark">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title text-white" id="deleteModalLabel">Confirm Delete</h5>
                    <button aria-label="Close" class="btn btn-system btn-system-light ms-auto" data-bs-dismiss="modal"
                        type="button">
                        <svg class="sa-icon sa-icon-2x">
                            <use href="img/sprite.svg#x"></use>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <input id="deleteEventId" type="hidden" />
                    <div
                        class="alert alert-danger bg-danger border-danger text-light border-opacity-50 bg-opacity-10 mb-0">
                        Are you sure you want to delete record <span class="fw-600 text-danger">Event Title</span>
                        <br />
                        This action cannot be undone.
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button class="btn btn-light" data-bs-dismiss="modal" type="button">Cancel</button>
                    <button class="btn btn-danger" id="confirmDelete" type="button">Yes,
                        delete</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Category Management Modal -->
    <div aria-hidden="true" aria-labelledby="categoryModalLabel" class="modal fade" id="categoryModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="categoryModalLabel">Manage Categories</h5>
                    <button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button"></button>
                </div>
                <div class="modal-body">
                    <form class="mb-4" id="categoryForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="categoryName">Category Name</label>
                                <input class="form-control" id="categoryName" required="" type="text" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="categoryColor">Color</label>
                                <select class="form-select" id="categoryColor">
                                    <option value="var(--primary-500)">Blue</option>
                                    <option value="var(--success-500)">Green</option>
                                    <option value="var(--danger-500)">Red</option>
                                    <option value="var(--warning-500)">Yellow</option>
                                    <option value="var(--info-500)">Cyan</option>
                                    <option value="var(--secondary-900)">Dark</option>
                                    <option value="var(--secondary-300)">Secondary</option>
                                    <option value="var(--bs-purple)">Purple</option>
                                    <option value="var(--bs-indigo)">Indigo</option>
                                    <option value="var(--bs-teal)">Teal</option>
                                </select>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Add Category</button>
                    </form>
                    <h6>Existing Categories</h6>
                    <ul class="list-group" id="categoryList">
                        <!-- Categories will be populated by JS -->
                    </ul>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/plugins/fullcalendar/index.global.min.js"></script>
    <script src="~/scripts/pages/fullcalendar.js"></script>
}
