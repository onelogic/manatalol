@page "/email-invoice-due"
@model Smartadmin.Pages.Etemplates.Emailinvoicedue.IndexModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Pages/Shared/_BaseLayout.cshtml";
}

@section styles
{

}

<table border="0" cellpadding="0" cellspacing="0" role="presentation"
    style="max-width: 600px; margin: 0 auto; background-color: #ffffff; border-collapse: collapse;" width="100%">
    <tbody>
        <tr>
            <td align="center" style="padding: 20px 0;">
                <!-- Header Logo -->
                <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                    style="max-width: 200px; margin: 0 auto;" width="100%">
                    <tbody>
                        <tr>
                            <td align="center">
                                <img alt="SmartAdmin Logo" src="~/eTemplates/logo.svg"
                                    style="display: block; width: 80px; height: auto; max-width: 100%;" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding: 20px;">
                <!-- Invoice Title -->
                <h2 style="font-size: 24px; color: #000000; margin: 0 0 10px; text-align: center;">New Invoice</h2>
                <h3 style="font-size: 18px; color: #666666; margin: 0 0 20px; text-align: center;">Invoice
                    #1234-5678</h3>
            </td>
        </tr>
        <tr>
            <td style="padding: 20px; background-color: #ffffff; margin: 0 20px;">
                <!-- Invoice Details -->
                <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                    <tbody>
                        <tr>
                            <td style="padding: 15px 0; text-align: center; background:#f8f9fa">
                                <p style="font-size: 16px; color: #000000; margin: 0 0 10px; font-weight: bold;">Due
                                    08/28/2021</p>
                                <p style="font-size: 24px; color: #000000; margin: 0 0 20px; font-weight: bold;">
                                    $200.00</p>
                                <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
                                    <tbody>
                                        <tr>
                                            <td align="center">
                                                <a href="#"
                                                    style="background-color: #2196F3; color: #ffffff; padding: 12px 24px; font-size: 16px; text-decoration: none; border-radius: 5px; display: inline-block; font-weight:bold">Pay
                                                    Invoice</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding: 20px;">
                <!-- Message -->
                <p style="font-size: 14px; color: #666666; margin: 0 0 10px; line-height: 1.5;">
                    Dear Sunny Ahmed &amp; Sonia Cage,
                </p>
                <p style="font-size: 14px; color: #666666; margin: 0 0 20px; line-height: 1.5;">
                    Here is your monthly storage. We will process credit cards automatically between the 1st and 3rd
                    of every month.
                    Thanks for choosing SmartAdmin for your business!
                </p>
            </td>
        </tr>
        <tr>
            <td style="padding: 20px; text-align: center;">
                <!-- Footer -->
                <h3>SmartAdmin Inc.</h3>
                <p>Sent with ♥️ from SmartAdmin Inc.<br />SmartAdmin Rd, SA-Alpha<br />California,
                    45673, USA</p>
            </td>
        </tr>
    </tbody>
</table>

