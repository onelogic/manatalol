@page "/email-verification"
@model Smartadmin.Pages.Etemplates.Emailverification.IndexModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Pages/Shared/_BaseLayout.cshtml";
}

@section styles
{

}

<table align="center" border="0" cellpadding="0" cellspacing="0" width="100%">
    <tbody>
        <tr>
            <td align="center" style="padding: 20px;">
                <table border="0" cellpadding="0" cellspacing="0"
                    style="background: #ffffff; border-radius: 8px; padding: 20px;" width="600">
                    <tbody>
                        <tr>
                            <td align="center" style="padding-bottom: 20px;">
                                <img alt="SmartAdmin Logo" height="80" src="~/eTemplates/logo.svg" width="80" />
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 0 20px 20px">
                                <h2
                                    style="text-align: center; margin:0; padding:20px;background:#fafafa;border-radius:4px;">
                                    One Last Step</h2>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 16px; color: #333333; padding: 10px 20px;">
                                <p>Almost done, <strong>@("person")</strong>! To complete your SmartAdmin sign up, we
                                    just need to verify your email address: <strong>person@example.com</strong></p>
                            </td>
                        </tr>
                        <tr>
                            <td align="center" style="padding: 20px;">
                                <a href="#"
                                    style="background-color: #2196F3; color: #ffffff; padding: 12px 20px; font-size: 20px; text-decoration: none; border-radius: 5px; display: inline-block;">Verify
                                    email address</a>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 14px; color: #555555; padding: 10px 20px;">
                                <p>Once verified, you can start using SmartAdmin to build, explore, and progress the
                                    future of the world. Go forth and create.</p>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-size: 12px; color: #777777; padding: 10px 20px;">
                                <p>You are receiving this email because you recently created a new SmartAdmin
                                    account. If this wasn't you, please ignore this email.</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table border="0" cellpadding="0" cellspacing="0" style="margin-top: 20px; text-align: center;"
                    width="600">
                    <tbody>
                        <tr>
                            <td>
                                <h3>SmartAdmin Inc.</h3>
                                <p>Sent with ♥️ from SmartAdmin Inc.<br />SmartAdmin Rd, SA-Alpha<br />California,
                                    45673, USA</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </tbody>
</table>

