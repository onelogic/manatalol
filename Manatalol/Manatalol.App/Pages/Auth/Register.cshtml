@page "/register"
@model Smartadmin.Pages.Auth.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Register";
    Layout = "~/Pages/Shared/_BaseLayout.cshtml";
}

@section styles
{

}

<nav class="navbar navbar-expand-lg navbar-dark position-fixed w-100 py-3" style="z-index: 1000;">
    <div class="container">
            @await Html.PartialAsync("~/Pages/Shared/Partials/_AppLogo.cshtml")
        <div class="ms-auto d-flex gap-2">
            <a class="btn btn-link text-white border-0 text-decoration-none" href="/login">Login</a>
        </div>
    </div>
</nav>
<!-- Login Page -->
<section class="hero-section position-relative overflow-hidden">
    <div class="container" style="position: relative; z-index: 1;">
        <div class="row justify-content-center">
            <div class="col-11 col-md-8 col-lg-6 col-xl-4">
                <div class="login-card p-4 p-md-6 bg-dark bg-opacity-50 translucent-dark rounded-4">
                    <h2 class="text-center mb-4">Register</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Input.FullName"></label>
                            <input asp-for="Input.FullName" class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <button type="submit" class="btn btn-lg btn-primary w-100">Register</button>

                        <div class="mt-3 opacity-75">
                            Already have an account? <a class="text-decoration-underline text-white fw-500" href="/login">Login here</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div id="net"></div>
</section>

<!-- Animation Plugin -->

@section scripts
{
    <script src="~/plugins/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/three/three.min.js"></script>
    <script src="~/plugins/vanta/vanta.halo.min.js"></script>
    <script src="~/plugins/vanta/vanta.net.min.js"></script>
    <script src="~/scripts/pages/auth-animation.js"></script>
}
