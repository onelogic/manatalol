@page "/forget-password"
@model Smartadmin.Pages.Auth.ForgetpasswordModel

@{
    ViewBag.Title = "Forgetpassword";
    Layout = "~/Pages/Shared/_BaseLayout.cshtml";
}

@section styles
{

}

<nav class="navbar navbar-expand-lg navbar-dark position-fixed w-100 py-3" style="z-index: 1000;">
    <div class="container">
        @await Html.PartialAsync("~/Pages/Shared/Partials/_AppLogo.cshtml")
        <a class="btn btn-link text-white border-0 text-decoration-none" href="/login">Login</a>
    </div>
</nav>
<section class="hero-section position-relative overflow-hidden">
    <div class="container position-relative z-1">
        <div class="row justify-content-center">

            <div class="col-11 col-md-8 col-lg-6 col-xl-6">
                @if (Model.EmailSent)
                {
                    <div class="login-card p-4 p-md-6 bg-dark bg-opacity-50 rounded-4 text-center text-white">
                        <h2>Sent Email</h2>
                        <p>Please check your email for the reset password link</p>
                        <a class="btn btn-warning bg-opacity-50 border-dark btn-lg" href="/login">Back to Login</a>
                    </div>
                }
                else
                {
                    <div class="login-card p-4 p-md-6 bg-dark bg-opacity-50 translucent-dark rounded-4" id="regular-login">
                        <h2 class="text-center mb-4">Forgot Password</h2>
                        <p class="text-center text-white opacity-50 mb-4">
                            Confirmation email will be sent to your email
                            address
                        </p>
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input asp-for="Email"
                                       class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25"
                                       id="email" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="text-end">
                                <button class="btn btn-warning bg-opacity-50 border-dark btn-lg" type="submit">
                                    Reset Password
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="login-card d-none p-4 p-md-6 bg-dark bg-opacity-50 translucent-dark rounded-4"
                         id="token-login">
                        <div class="d-flex flex-column align-items-center justify-content-center gap-3">
                            <h2 class="text-center mb-4">Sent Email</h2>
                            <p class="text-center text-white mb-4">Please check your email for the reset password link</p>
                            <div class="d-grid">
                                <a class="btn btn-dark bg-opacity-50 border-dark btn-lg" href="/login">
                                    Back to Login
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="net"></div>
</section>

<!-- Animation Plugin -->
@section scripts
{
    <script src="~/plugins/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/three/three.min.js"></script>
    <script src="~/plugins/vanta/vanta.halo.min.js"></script>
    <script src="~/plugins/vanta/vanta.net.min.js"></script>
    <script src="~/scripts/pages/auth-animation.js"></script>
}