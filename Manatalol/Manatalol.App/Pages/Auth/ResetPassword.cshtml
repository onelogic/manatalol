@page
@model Manatalol.App.Pages.Auth.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Pages/Shared/_BaseLayout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark position-fixed w-100 py-3" style="z-index: 1000;">
    <div class="container">
        @await Html.PartialAsync("~/Pages/Shared/Partials/_AppLogo.cshtml")
        <a class="btn btn-link text-white border-0 text-decoration-none" href="/login">Login</a>
    </div>
</nav>
<section class="hero-section position-relative overflow-hidden">
    <div class="container position-relative z-1">
        <div class="row justify-content-center">
            <div class="col-11 col-md-8 col-lg-6 col-xl-6">
                <div class="login-card p-4 p-md-6 bg-dark bg-opacity-50 translucent-dark rounded-4">
                    @if (Model.PasswordResetDone)
                    {
                        <div class="text-center text-white">
                            <h2>Password Reset Successful</h2>
                            <p>Your password has been updated successfully.</p>
                            <a class="btn btn-warning border-dark btn-lg mt-3" href="/login">
                                Back to Login
                            </a>
                        </div>
                    }
                    else
                    {
                        <h2 class="text-center mb-4 text-white">Reset Password</h2>
                        <p class="text-center text-white opacity-50 mb-4">
                            Enter your new password below
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" />

                            <div class="mb-3">
                                <label class="form-label text-white" for="Password">New Password</label>
                                <input asp-for="Password"
                                       class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25"
                                       id="Password"
                                       type="password"
                                       required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-white" for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="ConfirmPassword"
                                       class="form-control form-control-lg text-white bg-dark border-light border-opacity-25 bg-opacity-25"
                                       id="ConfirmPassword"
                                       type="password"
                                       required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="text-end">
                                <button class="btn btn-warning bg-opacity-50 border-dark btn-lg" type="submit">
                                    Change Password
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
    <div id="net"></div>
</section>

@section scripts
{
    <script src="~/plugins/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/three/three.min.js"></script>
    <script src="~/plugins/vanta/vanta.halo.min.js"></script>
    <script src="~/plugins/vanta/vanta.net.min.js"></script>
    <script src="~/scripts/pages/auth-animation.js"></script>
}
