<!DOCTYPE html>

@{
    var html_attributes = ViewBag.HTMLAttributes != null ? ViewBag.HTMLAttributes : "";
    var html_class = ViewBag.HTMLClass != null ? ViewBag.HTMLClass : "set-nav-dark";
}

<html lang="en" class="@html_class" @html_attributes>

<head>
    @await Html.PartialAsync("~/Pages/Shared/Partials/_TitleMeta.cshtml")
    @RenderSection("styles", false)
    @await Html.PartialAsync("~/Pages/Shared/Partials/_HeadCSS.cshtml")
</head>

<body>
    <div class="app-wrap">

        @await Html.PartialAsync("~/Pages/Shared/Partials/_Header.cshtml")
        @await Html.PartialAsync("~/Pages/Shared/Partials/_Sidebar.cshtml")

        <main class="app-body">

            <div class="app-content">

                <div class="content-wrapper">

                    @RenderBody()

                </div>

                @RenderSection("modelBlock", required: false)

            </div>

        </main>

        @await Html.PartialAsync("~/Pages/Shared/Partials/_AppDrawer.cshtml")
        @await Html.PartialAsync("~/Pages/Shared/Partials/_AppSettings.cshtml")

    </div>

    @await Html.PartialAsync("~/Pages/Shared/Partials/_FooterScripts.cshtml")
    @RenderSection("scripts", required: false)

</body>

</html>