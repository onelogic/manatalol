@model Manatalol.Application.DTO.EmailTemplates.EmailResetModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ManatalOl Reset your password</title>
    <style>
        h1 {
            color: #886ab5 !important;
            margin-left: 10px;
            padding-top: 4px;
        }

        .title-container {
            text-align: center;
        }

        .btn-primary {
            padding: 15px;
            width: 50%;
            margin-top: 10px;
            color: white !important;
            background-color: #886ab5;
            border: 1px #886ab5;
            border-radius: 0.375rem;
            box-shadow: rgba(136, 106, 181, 0.5) 0px 2px 6px 0px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }
    </style>
</head>
<body style="font-family: Arial, sans-serif; background: #f2f2f2; padding: 20px;">
    <table align="center" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tbody>
            <tr>
                <td align="center" style="padding: 20px;">
                    <table border="0" cellpadding="0" cellspacing="0"
                           style="background: #ffffff; border-radius: 8px; padding: 20px;" width="600">
                        <tbody>
                            <tr>
                                <td align="center" style="padding-bottom: 20px;">
                                    <div class="title-container">
                                        <h1>ManatalOl</h1>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2 align="center" style="padding:20px; background:#fafafa; border-radius:4px;">
                                        We received a request to reset your password.
                                    </h2>
                                    <p style="padding: 20px; text-align: left; margin: 0px">
                                        Use the link below to set up a new password for your account.
                                        If you did not request this, ignore this email — the link will expire automatically.
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td align="center" style="padding: 20px 0 20px;">
                                    <a href="@Model.ResetLink" class="btn-primary">
                                        Choose a new password
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>
</html>