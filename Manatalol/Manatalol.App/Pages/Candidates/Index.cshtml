@page "/"
@model Manatalol.App.Pages.Candidates.IndexModel

@{
    ViewBag.Title = "Index";
}

<div class="main-content">
    <div class="d-flex justify-content-between mb-3">
        <form method="get" class="d-flex">
            <input type="text" name="Search" value="@Model.Search" placeholder="Search..." class="form-control me-2" />
            <button type="submit" class="btn btn-md btn-outline-secondary d-flex justify-content-center align-self-center align-items-center">
                <span class="fal fa-search me-1"></span> Search
            </button>
        </form>

        <button class="btn btn-md btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <span class="fal fa-plus me-1"></span>
            Create candidate
        </button>
    </div>

    <div class="row mt-4">
        <div class="col-lg-12">
            <table class="st-table table table-striped table-hover st-responsive" id="myTable">
                <thead>
                    <tr>
                        <th>
                            <a asp-page="./Index"
                               asp-route-Search="@Model.Search"
                               asp-route-SortBy="firstname"
                               asp-route-SortDirection="@(Model.SortBy == "firstname" && Model.SortDirection == "asc" ? "desc" : "asc")"
                               class="text-decoration-none">
                                Candidate Name
                                @if (Model.SortBy == "firstname")
                                {
                                <span>
                                    @Html.Raw(Model.SortDirection == "asc"
                                                                        ? "<i class='fal fa-chevron-up'></i>"
                                                                        : "<i class='fal fa-chevron-down'></i>")
                                </span>
                                                                }
                            </a>
                        </th>
                        <th>Location</th>
                        <th>Function</th>
                        <th>Product Owner</th>
                        <th>Source</th>
                        <th>Note</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var candidate in Model.Candidates.Items)
                    {
                        <tr>
                            <td class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(candidate.ProfilePictureUrl))
                                {
                                    <img src="@candidate.ProfilePictureUrl" class="ma-img ma-avatar me-1" />
                                }
                                else
                                {
                                    <div class="ma-avatar me-1 bg-secondary">@candidate.FirstName.Substring(0, 2)</div>
                                }
                                @candidate.FirstName @candidate.LastName
                            </td>
                            <td>@candidate.Location</td>
                            <td>@candidate.Function</td>
                            <td>@candidate.CreatedBy</td>
                            <td>@candidate.Source</td>
                            <td>@candidate.NotesCount</td>
                            <td>
                                <a href="/details/@candidate.Reference" class="btn btn-sm btn-outline-secondary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"></path>
                                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"></path>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <nav class="d-flex justify-content-end">
                <ul class="pagination">
                    @for (int i = 0; i < Math.Ceiling((double)Model.Candidates.TotalItems / Model.Candidates.PageSize); i++)
                    {
                        <li class="page-item @(i == Model.Candidates.PageNumber ? "active" : "")">
                            <a class="page-link"
                               asp-page="./Index"
                               asp-route-PageNumber="@i"
                               asp-route-Search="@Model.Search"
                               asp-route-SortOrder="@Model.SortDirection">
                                @(i + 1)
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Candidate</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6 p-3">
                        <a href="/create-candidate" class="open-form border rounded p-3 d-flex flex-column align-items-center justify-content-center text-center" style="height:120px">
                            <div style="font-size: 2.1rem">
                                <div class="stack-icon">
                                    <div class="icon-layers"><i class="sa sa-base-7 stack-3x text-primary"></i></div>
                                    <div class="icon-layers"><i class="fal fa-clipboard-user text-light stack-1x"></i></div>
                                </div>
                            </div>
                            <span class="mt-2 d-block">Complete a form</span>
                        </a>
                    </div>
                    <div class="col-6 p-3">
                        <a href="" class="open-file border rounded p-3 d-flex flex-column align-items-center justify-content-center text-center" style="height:120px">
                            <div style="font-size: 2.1rem">
                                <div class="stack-icon">
                                    <div class="icon-layers"><i class="sa sa-base-7 stack-3x text-primary"></i></div>
                                    <div class="icon-layers"><i class="fal fa-cloud-upload text-light stack-1x"></i></div>
                                </div>
                            </div>
                            <span class="mt-2 d-block">Upload one or multiple form</span>
                        </a>
                    </div>
                    <div class="col-6 p-3">
                        <a href="" class="open-linkedin border rounded p-3 d-flex flex-column align-items-center justify-content-center text-center" style="height:120px">
                            <div style="font-size: 2.1rem">
                                <div class="stack-icon">
                                    <div class="icon-layers"><i class="sa sa-base-7 stack-3x text-primary"></i></div>
                                    <div class="icon-layers"><i class="sa sa-link text-light stack-1x"></i></div>
                                </div>
                            </div>
                            <span class="mt-2 d-block">Via Linkedin Url</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Candidate Via Files -->
<partial name="Partials/CreateCandidatViaFile" model="Model" />

<!-- Create Candidate Via Linkedin url -->
<partial name="Partials/CreateCandidatViaLinkedinUrl" model="Model" />

@section Scripts {
    <script>
                document.addEventListener("DOMContentLoaded", function () {
            const exampleModalEl = document.getElementById("exampleModal");
            const exampleModal = bootstrap.Modal.getOrCreateInstance(exampleModalEl);

            const fileModalEl = document.getElementById("createCandidatViaFile");
            const linkedinModalEl = document.getElementById("createCandidatViaLinkedinUrl");

            if (!fileModalEl || !linkedinModalEl) {
                console.error("One of the modals does not exist!");
                return;
            }

            const fileModal = bootstrap.Modal.getOrCreateInstance(fileModalEl);
            const linkedinModal = bootstrap.Modal.getOrCreateInstance(linkedinModalEl);

            function openNextModal(nextModal) {
                exampleModalEl.addEventListener('hidden.bs.modal', function handler() {
                    nextModal.show();
                    exampleModalEl.removeEventListener('hidden.bs.modal', handler);
                });
                exampleModal.hide();
            }

            document.querySelector(".open-file").addEventListener("click", (e) => {
                e.preventDefault();
                openNextModal(fileModal);
            });

            document.querySelector(".open-linkedin").addEventListener("click", (e) => {
                e.preventDefault();
                openNextModal(linkedinModal);
            });
        });
    </script>
}