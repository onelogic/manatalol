@page "/details/{CandidateReference}"
@{
    ViewBag.Title = "Details";
}

@using Manatalol.App.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> _userManager
@model Manatalol.App.Pages.Candidates.DetailsModel
@{
    var candidate = Model.CandidateDetails;
    var user = await _userManager.GetUserAsync(User);
}
@{
    <style>
        .candidat-img {
            height: 100%;
            max-height: 100%;
            width: 160px;
            max-width: 160px;
            font-size: 2rem;
        }
    </style>
}

<div class="d-flex align-items-end mb-4">
    <div>
        @await Html.PartialAsync("~/Pages/Shared/Partials/_PageTitle.cshtml", new {
        pageTitle = "Candidat Details",
                pageSubTitle1 = "Candidats",
                pageSubTitle1Url = "/"
                })
    </div>
</div>
<div class="main-content">
    <div class="row">
        <div class="main-content layout-trimmed profile-page position-relative">
            <!-- Profile Header Background -->
            <div class="profile-page-header-underlay bg-secondary-gradient bg-secondary"></div>
            <!-- Main Profile Content -->
            <div class="container-xl position-relative">
                <!-- Profile Header Section -->
                <div class="profile-page-header rounded-3 body-bg shadow-3 mb-4">
                    <div class="d-flex flex-column flex-md-row align-items-center position-relative p-4">
                        <!-- Profile Avatar -->
                        <div class="profile-page-header-avatar mb-3 mb-md-0">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(candidate.ProfilePictureUrl))
                                {
                                    <img alt="" class="rounded-circle border border-3 border-white shadow-2" height="160"
                                         src="@candidate.ProfilePictureUrl" />
                                }
                                else
                                {
                                    <div class="rounded-circle border border-3 border-white shadow-2" style="height:160px;">
                                        <div class="ma-avatar bg-secondary candidat-img">
                                            @candidate.FirstName.Substring(0, 2)
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                        <!-- Profile Info -->
                        <div class="profile-page-header-info ms-md-4 text-center text-md-start">
                            <h1 class="fs-xxl fw-700 mb-2">@candidate.FirstName @candidate.LastName</h1>
                            <p class="text-muted mb-2">@candidate.Function</p>
                        </div>
                        <div class="profile-page-header-actions ms-md-auto mt-3 mt-md-0">
                            <a href="/update/@candidate.Reference" class="btn btn-outline-default me-2 d-flex waves-effect waves-themed">
                                <svg class="sa-icon me-2 inline-text">
                                    <use href="@Url.Content("~/icons/sprite.svg#edit-3")"></use>
                                </svg>Edit
                            </a>
                        </div>
                    </div>
                    <!-- Profile Navigation -->
                    <div class="profile-page-nav border-top">
                        <ul class="nav nav-tabs-clean">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#profile-about">
                                    <svg class="sa-icon me-2">
                                        <use href="@Url.Content("~/icons/sprite.svg#user")"></use>
                                    </svg>
                                    About
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#profile-news">
                                    <svg class="sa-icon me-2">
                                        <use href="@Url.Content("~/icons/sprite.svg#save")"></use>
                                    </svg>
                                    Notes
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Profile Content -->
                <div class="tab-content">
                    <!-- About Tab -->
                    <div class="tab-pane fade show active" id="profile-about">
                        <div class="row">
                            <div class="col-lg-8">
                                <!-- About Me Section -->
                                <div class="panel mb-4">
                                    <div class="panel-container">
                                        <div class="panel-content">
                                            <div class="profile-view-mode">
                                                <h5 class="mb-3">Contact Information</h5>
                                                <div class="d-flex flex-column gap-2">
                                                    @if (candidate.Email != null)
                                                    {
                                                        <div class="d-flex align-items-center">
                                                            <svg class="sa-icon me-2">
                                                                <use href="@Url.Content("~/icons/sprite.svg#mail")"></use>
                                                            </svg>
                                                            @candidate.Email
                                                        </div>
                                                    }
                                                    @if (candidate.PhoneNumber != null)
                                                    {
                                                        <div class="d-flex align-items-center">
                                                            <svg class="sa-icon me-2">
                                                                <use href="@Url.Content("~/icons/sprite.svg#phone")"></use>
                                                            </svg>
                                                            @candidate.PhoneNumber
                                                        </div>
                                                    }
                                                    @if (candidate.Location != null)
                                                    {
                                                        <div class="d-flex align-items-center">
                                                            <svg class="sa-icon me-2">
                                                                <use href="@Url.Content("~/icons/sprite.svg#map-pin")"></use>
                                                            </svg>
                                                            @candidate.Location
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Experience Section -->
                                <div class="panel mb-4">
                                    <div class="panel-hdr">
                                        <h2>Experience</h2>
                                    </div>
                                    <div class="panel-container">
                                        <div class="panel-content">
                                            <div class="timeline">
                                                @foreach (var exp in candidate.Experiences?.OrderByDescending(s => s.StartDate))
                                                {
                                                    <div class="timeline-item">
                                                        <div class="timeline-marker bg-primary-500"></div>
                                                        <div class="timeline-content">
                                                            <h5 class="mb-2">@exp.Position</h5>
                                                            <p class="text-muted mb-2">
                                                                @exp.CompanyName • @exp.StartDate?.ToString("MMMM yyyy") - @(exp.IsCurrent ? "Present" : exp.EndDate?.ToString("MMMM yyyy"))
                                                            </p>
                                                            <p>
                                                                @exp.Description
                                                            </p>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <!-- Skills Section -->
                                <div class="panel mb-4">
                                    <div class="panel-hdr">
                                        <h2>Skills</h2>
                                    </div>
                                    <div class="panel-container">
                                        <div class="panel-content">
                                            <div class="d-flex flex-wrap gap-2">
                                                @foreach (var skill in candidate.Skills)
                                                {
                                                    <span class="badge bg-primary">@skill.Name</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Education Section -->
                                <div class="panel mb-4">
                                    <div class="panel-hdr">
                                        <h2>Education</h2>
                                    </div>
                                    <div class="panel-container">
                                        <div class="panel-content">
                                            <div class="timeline">
                                                @foreach (var education in candidate.Educations?.OrderByDescending(s => s.StartDate))
                                                {
                                                    <div class="timeline-item">
                                                        <div class="timeline-marker bg-fusion-500"></div>
                                                        <div class="timeline-content">
                                                            <h5 class="mb-2">@education.Degree</h5>
                                                            <p class="text-muted mb-2">
                                                                @education.School
                                                                • @education.StartDate?.Year - @education.EndDate?.Year
                                                            </p>
                                                            <p>@education.Description</p>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- News Section -->
                    <div class="tab-pane fade" id="profile-news" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="panel mb-4">
                                    <div class="panel-container">
                                        <div class="panel-content">
                                            <div class="d-flex flex-column gap-4">
                                                <div class="comments-section mt-3 border-bottom">
                                                    <form method="post">
                                                        <div class="d-flex gap-2 mb-4">
                                                            <div class="ma-avatar mt-1">@user?.FullName.Substring(0, 2)</div>

                                                            <div class="flex-grow-1">
                                                                <div class="comment-input-wrapper">
                                                                    <textarea asp-for="NewNote.Content"
                                                                              class="form-control"
                                                                              placeholder="Add Note..." required></textarea>
                                                                    <div class="mt-3 d-flex justify-content-end">
                                                                        <button class="btn btn-primary btn-sm rounded-pill px-3"
                                                                                type="submit">
                                                                            Post
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                @if (!Model.CandidateDetails.Notes.Any())
                                                {
                                                    <div class="text-center text-muted py-4">
                                                        No notes available.
                                                    </div>
                                                }
                                                <div id="myTable">
                                                    @foreach (var note in Model.CandidateDetails.Notes.OrderByDescending(c => c.CreatedAt))
                                                    {
                                                        <div class="pb-4 note-item">
                                                            <div class="d-flex align-items-center mb-3">
                                                                <div class="ma-avatar me-3">@user?.FullName.Substring(0, 2)</div>
                                                                <div>
                                                                    <h6 class="mb-0">@note.CreatedBy</h6>
                                                                    <small class="text-muted">
                                                                        @note.CreatedAt.ToString("MMMM dd, yyyy - HH:mm")
                                                                    </small>
                                                                </div>
                                                            </div>
                                                            <p class="mb-3">
                                                                @note.Content
                                                            </p>
                                                        </div>
                                                    }
                                                </div>
                                                <!-- Pagination -->
                                                <div id="pagination" class="mb-3 d-flex justify-content-end"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/scripts/pages/profile.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const itemsPerPage = 5; // Nombre de notes par page
            const notes = document.querySelectorAll("#myTable .note-item");
            const totalPages = Math.ceil(notes.length / itemsPerPage);
            const pagination = document.getElementById("pagination");

            function showPage(page) {
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;

                notes.forEach((note, index) => {
                    note.style.display = (index >= start && index < end) ? "block" : "none";
                });

                document.querySelectorAll("#pagination button").forEach((btn, idx) => {
                    btn.classList.toggle("btn-primary", idx + 1 === page);
                    btn.classList.toggle("btn-outline-primary", idx + 1 !== page);
                });
            }

            for (let i = 1; i <= totalPages; i++) {
                const btn = document.createElement("button");
                btn.textContent = i;
                btn.className = "btn btn-sm btn-outline-primary me-1";
                btn.addEventListener("click", () => showPage(i));
                pagination.appendChild(btn);
            }

            if (totalPages > 0) {
                showPage(1);
            }
        });
    </script>
}
